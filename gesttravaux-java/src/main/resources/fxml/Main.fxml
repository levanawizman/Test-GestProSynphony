<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.immosync.gesttravaux.controllers.MainController"
            prefHeight="800.0" prefWidth="1200.0">

    <!-- Top Menu Bar -->
    <top>
        <VBox>
            <MenuBar>
                <Menu text="Fichier">
                    <MenuItem text="Quitter" onAction="#handleExit"/>
                </Menu>
                <Menu text="Gestion">
                    <MenuItem text="Entrepreneurs" onAction="#showEntrepreneurs"/>
                    <MenuItem text="Catégories" onAction="#showCategories"/>
                    <MenuItem text="Propriétaires" onAction="#showProprietaires"/>
                    <MenuItem text="Biens" onAction="#showBiens"/>
                    <MenuItem text="Prestations" onAction="#showPrestations"/>
                    <MenuItem text="Chantiers" onAction="#showChantiers"/>
                </Menu>
                <Menu text="Aide">
                    <MenuItem text="À propos" onAction="#showAbout"/>
                </Menu>
            </MenuBar>

            <!-- Title Bar -->
            <HBox styleClass="title-bar" spacing="10">
                <Label text="GestTravaux Pro" styleClass="title-bar"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="statusLabel" text="Bienvenue" style="-fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </top>

    <!-- Center Content Area -->
    <center>
        <TabPane fx:id="mainTabPane" tabClosingPolicy="ALL_TABS">
            <!-- Tabs will be dynamically added here -->
        </TabPane>
    </center>

    <!-- Bottom Status Bar -->
    <bottom>
        <HBox style="-fx-background-color: #ecf0f1; -fx-padding: 10;" spacing="10">
            <Label text="GestTravaux Pro v1.0"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="dbStatusLabel" text="Base de données: Connectée"/>
        </HBox>
    </bottom>
</BorderPane>
