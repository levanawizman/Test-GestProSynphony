{% extends 'base.html.twig' %}

{% block title %}Mes Chantiers - GestTravaux Pro{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h3">
                <i class="bi bi-list-ul"></i> Mes Chantiers
            </h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="{{ path('inspecteur_dashboard') }}">Tableau de bord</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Chantiers</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            {% if chantiers is empty %}
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-inbox display-1 text-muted"></i>
                        <h4 class="mt-3">Aucun chantier assigné</h4>
                        <p class="text-muted">Vous n'avez pas de chantiers assignés pour le moment.</p>
                        <a href="{{ path('inspecteur_dashboard') }}" class="btn btn-primary mt-3">
                            <i class="bi bi-arrow-left"></i> Retour au tableau de bord
                        </a>
                    </div>
                </div>
            {% else %}
                <div class="row g-3">
                    {% for chantier in chantiers %}
                        <div class="col-md-6 col-lg-4">
                            <div class="card h-100 shadow-sm">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h5 class="card-title">
                                            <i class="bi bi-building"></i> Chantier #{{ chantier.id }}
                                        </h5>
                                        <span class="{{ chantier.statutBadgeClass }}">
                                            {{ chantier.statutLabel }}
                                        </span>
                                    </div>

                                    <div class="mb-3">
                                        <p class="mb-1">
                                            <i class="bi bi-geo-alt text-primary"></i>
                                            <strong>{{ chantier.fullAddress }}</strong>
                                        </p>

                                        {% if chantier.infoChantier %}
                                            <p class="text-muted small mb-1">
                                                <i class="bi bi-info-circle"></i> {{ chantier.infoChantier }}
                                            </p>
                                        {% endif %}

                                        {% if chantier.bien %}
                                            <p class="text-muted small mb-0">
                                                <i class="bi bi-house"></i>
                                                Bien: {{ chantier.bien.fullAddress }}
                                            </p>
                                        {% endif %}
                                    </div>

                                    <div class="d-grid gap-2">
                                        <a href="{{ path('inspecteur_chantier_detail', {id: chantier.id}) }}"
                                           class="btn btn-primary">
                                            <i class="bi bi-eye"></i> Voir détails
                                        </a>
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('inspecteur_add_observation', {chantierId: chantier.id}) }}"
                                               class="btn btn-outline-success btn-sm">
                                                <i class="bi bi-camera"></i> Observation
                                            </a>
                                            <a href="{{ path('inspecteur_upload_document', {chantierId: chantier.id}) }}"
                                               class="btn btn-outline-info btn-sm">
                                                <i class="bi bi-file-earmark-pdf"></i> Document
                                            </a>
                                        </div>
                                    </div>
                                </div>

                                {% if chantier.devis|length > 0 %}
                                    <div class="card-footer bg-light">
                                        <small class="text-muted">
                                            <i class="bi bi-file-text"></i>
                                            {{ chantier.devis|length }} devis
                                        </small>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
