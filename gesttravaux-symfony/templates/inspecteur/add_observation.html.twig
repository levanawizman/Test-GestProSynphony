{% extends 'base.html.twig' %}

{% block title %}Ajouter une observation - Chantier #{{ chantier.id }}{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    {# Breadcrumb #}
    <div class="row mb-3">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="{{ path('inspecteur_dashboard') }}">Tableau de bord</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="{{ path('inspecteur_chantiers_list') }}">Chantiers</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="{{ path('inspecteur_chantier_detail', {id: chantier.id}) }}">
                            Chantier #{{ chantier.id }}
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Ajouter observation</li>
                </ol>
            </nav>
        </div>
    </div>

    {# Header #}
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h3">
                <i class="bi bi-camera"></i> Ajouter une observation
            </h1>
            <p class="text-muted">Chantier: {{ chantier.fullAddress }}</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-pencil-square"></i> Formulaire d'observation
                    </h5>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}

                    <div class="mb-3">
                        {{ form_label(form.libelleDoc, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.libelleDoc) }}
                        {{ form_errors(form.libelleDoc) }}
                        <div class="form-text">
                            <i class="bi bi-info-circle"></i> Donnez un titre descriptif à votre observation
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.observation, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.observation) }}
                        {{ form_errors(form.observation) }}
                        <div class="form-text">
                            <i class="bi bi-info-circle"></i> Décrivez en détail ce que vous observez
                        </div>
                    </div>

                    <div class="mb-4">
                        {{ form_label(form.photoFile, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.photoFile) }}
                        {{ form_errors(form.photoFile) }}
                        <div class="form-text">
                            <i class="bi bi-camera"></i> Prenez une photo avec votre appareil mobile
                            <br>
                            <small>Formats acceptés: JPEG, PNG, GIF - Taille max: 5 Mo</small>
                        </div>

                        {# Preview area for photo #}
                        <div id="photoPreview" class="mt-3" style="display: none;">
                            <img id="previewImage" src="" alt="Aperçu" class="img-fluid rounded border">
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="bi bi-check-circle"></i> Enregistrer l'observation
                        </button>
                        <a href="{{ path('inspecteur_chantier_detail', {id: chantier.id}) }}"
                           class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle"></i> Annuler
                        </a>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>

            {# Mobile tips #}
            <div class="card mt-3 bg-light">
                <div class="card-body">
                    <h6 class="card-title">
                        <i class="bi bi-lightbulb"></i> Conseils pour les photos
                    </h6>
                    <ul class="mb-0 small">
                        <li>Assurez-vous que la photo est nette et bien éclairée</li>
                        <li>Cadrez bien le sujet de votre observation</li>
                        <li>Sur mobile, vous pouvez prendre la photo directement</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
    // Photo preview functionality
    const photoInput = document.querySelector('input[type="file"][accept="image/*"]');
    const previewDiv = document.getElementById('photoPreview');
    const previewImage = document.getElementById('previewImage');

    if (photoInput) {
        photoInput.addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file && file.type.startsWith('image/')) {
                const reader = new FileReader();
                reader.onload = function(event) {
                    previewImage.src = event.target.result;
                    previewDiv.style.display = 'block';
                };
                reader.readAsDataURL(file);
            } else {
                previewDiv.style.display = 'none';
            }
        });
    }
</script>
{% endblock %}
