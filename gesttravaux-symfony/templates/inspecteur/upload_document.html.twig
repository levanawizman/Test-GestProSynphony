{% extends 'base.html.twig' %}

{% block title %}Télécharger un document - Chantier #{{ chantier.id }}{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    {# Breadcrumb #}
    <div class="row mb-3">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="{{ path('inspecteur_dashboard') }}">Tableau de bord</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="{{ path('inspecteur_chantiers_list') }}">Chantiers</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="{{ path('inspecteur_chantier_detail', {id: chantier.id}) }}">
                            Chantier #{{ chantier.id }}
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Télécharger document</li>
                </ol>
            </nav>
        </div>
    </div>

    {# Header #}
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h3">
                <i class="bi bi-file-earmark-pdf"></i> Télécharger un document
            </h1>
            <p class="text-muted">Chantier: {{ chantier.fullAddress }}</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-cloud-upload"></i> Formulaire de téléchargement
                    </h5>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}

                    <div class="mb-3">
                        {{ form_label(form.fileType, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.fileType) }}
                        {{ form_errors(form.fileType) }}
                        <div class="form-text">
                            <i class="bi bi-info-circle"></i> Sélectionnez le type de document
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.libelleDoc, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.libelleDoc) }}
                        {{ form_errors(form.libelleDoc) }}
                        <div class="form-text">
                            <i class="bi bi-info-circle"></i> Donnez un nom identifiable au document
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.observation, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.observation) }}
                        {{ form_errors(form.observation) }}
                        <div class="form-text">
                            <i class="bi bi-info-circle"></i> Ajoutez des notes ou commentaires (facultatif)
                        </div>
                    </div>

                    <div class="mb-4">
                        {{ form_label(form.documentFile, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.documentFile) }}
                        {{ form_errors(form.documentFile) }}
                        <div class="form-text">
                            <i class="bi bi-file-earmark-pdf"></i> Sélectionnez un fichier PDF
                            <br>
                            <small>Taille maximale: 10 Mo</small>
                        </div>

                        {# File info display #}
                        <div id="fileInfo" class="mt-3 alert alert-info" style="display: none;">
                            <i class="bi bi-file-earmark-pdf"></i>
                            <strong>Fichier sélectionné:</strong>
                            <span id="fileName"></span>
                            <br>
                            <small><span id="fileSize"></span></small>
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-info btn-lg">
                            <i class="bi bi-cloud-upload"></i> Télécharger le document
                        </button>
                        <a href="{{ path('inspecteur_chantier_detail', {id: chantier.id}) }}"
                           class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle"></i> Annuler
                        </a>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>

            {# Document types info #}
            <div class="card mt-3 bg-light">
                <div class="card-body">
                    <h6 class="card-title">
                        <i class="bi bi-info-circle"></i> Types de documents acceptés
                    </h6>
                    <ul class="mb-0 small">
                        <li><strong>DPE:</strong> Diagnostic de Performance Énergétique</li>
                        <li><strong>Diagnostics:</strong> Bruit, Amiante, Plomb, Termites</li>
                        <li><strong>Plans:</strong> Plans de construction ou rénovation</li>
                        <li><strong>Rapports:</strong> Rapports d'inspection technique</li>
                        <li><strong>Autres:</strong> Tout autre document pertinent</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
    // File info display functionality
    const fileInput = document.querySelector('input[type="file"][accept="application/pdf"]');
    const fileInfoDiv = document.getElementById('fileInfo');
    const fileNameSpan = document.getElementById('fileName');
    const fileSizeSpan = document.getElementById('fileSize');

    if (fileInput) {
        fileInput.addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                fileNameSpan.textContent = file.name;
                const sizeInMB = (file.size / (1024 * 1024)).toFixed(2);
                fileSizeSpan.textContent = `Taille: ${sizeInMB} Mo`;
                fileInfoDiv.style.display = 'block';
            } else {
                fileInfoDiv.style.display = 'none';
            }
        });
    }
</script>
{% endblock %}
