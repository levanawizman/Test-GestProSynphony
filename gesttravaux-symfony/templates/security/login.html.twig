{% extends 'base.html.twig' %}

{% block title %}Connexion - GestTravaux Pro{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <i class="bi bi-building display-1 text-primary"></i>
                        <h1 class="h3 mt-3">GestTravaux Pro</h1>
                        <p class="text-muted">Interface Inspecteur</p>
                    </div>

                    {% if error %}
                        <div class="alert alert-danger" role="alert">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    <form method="post">
                        <div class="mb-3">
                            <label for="inputEmail" class="form-label">
                                <i class="bi bi-envelope"></i> Email
                            </label>
                            <input type="email"
                                   value="{{ last_username }}"
                                   name="_username"
                                   id="inputEmail"
                                   class="form-control form-control-lg"
                                   autocomplete="email"
                                   placeholder="inspecteur@gesttravaux.fr"
                                   required
                                   autofocus>
                        </div>

                        <div class="mb-4">
                            <label for="inputPassword" class="form-label">
                                <i class="bi bi-lock"></i> Mot de passe
                            </label>
                            <input type="password"
                                   name="_password"
                                   id="inputPassword"
                                   class="form-control form-control-lg"
                                   autocomplete="current-password"
                                   placeholder="Votre mot de passe"
                                   required>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="d-grid">
                            <button class="btn btn-primary btn-lg" type="submit">
                                <i class="bi bi-box-arrow-in-right"></i> Se connecter
                            </button>
                        </div>
                    </form>

                    <div class="text-center mt-4">
                        <small class="text-muted">
                            <i class="bi bi-shield-check"></i> Connexion sécurisée
                        </small>
                    </div>
                </div>
            </div>

            <div class="text-center mt-3">
                <small class="text-muted">
                    Optimisé pour mobile et tablette
                </small>
            </div>
        </div>
    </div>
</div>
{% endblock %}
